@{
    ViewBag.Title = "GetDate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<h4>测试ajax提交，时间： @ViewBag.date</h4>

@using (Ajax.BeginForm("PostDate", "Home", new AjaxOptions()
{
    HttpMethod = "post",
    Confirm = "确定提交吗？",
    InsertionMode = InsertionMode.Replace,
    OnSuccess = "returnSuccess",
    UpdateTargetId = "result",

}))
{
    <table>
        <tr>
            <td>用户名：</td>
            <td><input type="text" id="txtUserName" name="UserName" /></td>
        </tr>
        <tr>
            <td>密码：</td>
            <td><input type="text" id="txtPwd" name="Pwd" /></td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" id="btnSubmit" value="提 交" />
            </td>

        </tr>
    </table>
    <span id='result'></span>
}


<script type="text/javascript">
    function returnSuccess(data) {
        alert("成功");
    }
</script>
